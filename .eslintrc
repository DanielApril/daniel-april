{
	"parser": "babel-eslint",
	"plugins": [
		"prettier",
		"react",
		"jest",
		"react-hooks"
	],
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react",
		"eslint:recommended",
		"plugin:jest/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"modules": true,
			"jsx": true,
			"legacyDecorators": true
		}
	},
	"settings": {
		"import/core-modules": [
			"@finom/data-provider",
			"@finom/api-source",
			"@finom/localization",
			"@finom/components"
		],
		"import/resolver": {
			"node": {
				"paths": [
					"packages/app/src",
					"modules/**/src"
				],
				"extensions": [
					".js",
					".jsx",
					".ts",
					".tsx"
				]
			}
		},
		"import/extensions": [
			".js",
			".jsx",
			".ts",
			".tsx"
		]
	},
	"globals": {
		"$": true,
		"jQuery": true,
		"__DEV__": true,
		"__APP_VERSION__": true,
		"__API_URL__": true,
		"window": true,
		"document": true,
		"localStorage": true,
		"FormData": true,
		"FileReader": true,
		"Blob": true,
		"navigator": true
	},
	"rules": {
		"no-console": [
			2
		],
		"no-alert": [
			2
		],
		"no-unused-vars": [
			2,
			{
				"ignoreRestSiblings": true
			}
		],
		"max-len": [
			2,
			{
				"code": 120,
				"ignoreUrls": true,
				"ignoreComments": true,
				"tabWidth": 4,
				"ignoreRegExpLiterals": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true
			}
		],
		"no-mixed-spaces-and-tabs": [
			0
		],
		"semi": [
			2
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"arraysInObjects": true
			}
		],
		"key-spacing": [
			2,
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"arrow-parens": [
			0
		], //[2, "as-needed"],
		"padded-blocks": [
			2,
			"never"
		],
		"keyword-spacing": [
			2,
			{
				"after": true,
				"before": true
			}
		],
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1,
				"ArrayExpression": 1,
				"ObjectExpression": 1,
				"CallExpression": {
					"arguments": 1
				},
				"FunctionExpression": {
					"parameters": 1
				},
				"MemberExpression": 1
			}
		],
		"comma-dangle": [
			2,
			{
				"arrays": "only-multiline",
				"objects": "only-multiline",
				"imports": "only-multiline",
				"exports": "only-multiline",
				"functions": "ignore"
			}
		],
		"import/prefer-default-export": [
			0
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".tsx",
					".jsx"
				]
			}
		],
		"react/jsx-uses-react": [
			1
		],
		"react/jsx-uses-vars": [
			1
		],
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-tag-spacing": [
			2,
			{
				"afterOpening": "never",
				"beforeSelfClosing": "always",
				"closingSlash": "never"
			}
		],
		"react/jsx-boolean-value": [
			2,
			"never"
		],
		"react/self-closing-comp": [
			0
		],
		"react/prop-types": [
			0
		],
		"react/require-default-props": [
			0
		],
		"react/prefer-stateless-function": [
			0
		],
		"jsx-a11y/click-events-have-key-events": [
			0
		],
		"jsx-a11y/no-static-element-interactions": [
			0
		],
		"jsx-a11y/label-has-for": [
			0
		],
		"jsx-a11y/anchor-is-valid": [
			0
		],
		"react/default-props-match-prop-types": [
			0
		],
		"react/destructuring-assignment": [
			0
		],
		"react/forbid-prop-types": [
			0
		],
		"jsx-a11y/anchor-has-content": [
			0
		],
		"no-useless-escape": [
			0
		],
		"react/no-unused-state": [
			0
		],
		"react/jsx-no-target-blank": [
			0
		],
		"react/no-did-update-set-state": [
			0
		],
		"react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
		"react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
	}
}